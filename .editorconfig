root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Shell scripts
[*.{sh,zsh,bash}]
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 4

# TOML
[*.toml]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Makefiles
[Makefile]
indent_style = tab
